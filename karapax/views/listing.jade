extends layout

block extraHeader
   link(rel='stylesheet', href='/stylesheets/karapax_listing.css')

block content
   section#listing-header
      .container
         .row
            .col-md-8.col-md-offset-2.text-center
               a#gallery-btn.btn.btn-default(href='#',data-toggle='modal', data-target='#apt-modal') View Gallery

   #apt-modal.modal.fade(role='dialog')
      .modal-dialog
         #apt-slides.carousel.slide(data-ride='carousel')
            ol.carousel-indicators
               li.active(data-target='#apt-slides', data-slide-to='0')
               li(data-target='#apt-slides', data-slide-to='1')
               li(data-target='#apt-slides', data-slide-to='2')
            .carousel-inner(role='listbox')
               .item.active
                  img.img-responsive(src='images/400sherbrooke1612br1.jpg',alt='')
                  .carousel-caption
                     h3
               .item
                  img.img-responsive(src='images/400sherbrooke1612ba1.jpg', alt='')
                  .carousel-caption
                     h3
                     p
               .item
                  img.img-responsive(src='images/400sherbrooke1612dr1.jpg', alt='')
                  .carousel-caption
                     h3
                     p
             a.left.carousel-control(href='#apt-slides', role='button', data-slide='prev')
               span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
               span.sr-only Previous
             a.right.carousel-control(href='#apt-slides', role='button', data-slide='next')
               span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
               span.sr-only Next

   section#apt-info
      .container
         .row
            //full screen if screen size less than 768px, otherwise 75%
            .col-sm-12.col-mylg-9
               .row.row-space-4
                  //host img
                  .col-sm-3
                     img#user-img.img-circle.img-responsive.text-center-sm.row-space-4(src='/images/karapax_logo.png', alt='Karapax')
                  //core info
                  .col-sm-9
                     .row.row-space-4
                        .col-sm-12.text-center
                           span.h4 #{address}
                           span.inline-space-3.font-gray Montreal, QC, Canada
                           span.inline-space-3.font-gray H3T 1Z3
                     .row.text-center
                        .col-xs-4
                           i.fa.fa-bed.fa-3x
                           p.font-gray bedrooms
                        .col-xs-4
                           i.fa.fa-bed.fa-3x
                           p.font-gray bathrooms
                        .col-xs-4
                           i.fa.fa-calendar.fa-3x
                           p.font-gray Avaliable
               //detail info
               .row
                  hr.row-space-4
                  .col-sm-3
                     p.font-gray The space
                  .col-sm-9
                     .col-sm-4
                        p Area: #{area}
                     .col-sm-4
                        p Bedrooms: #{bedrooms}
                     .col-sm-4
                        p bathrooms: #{bathrooms}
                     .col-sm-4
                        p Size : #{size}m^2
                     .col-sm-4
                        p Deposit : a month rent
                     .col-sm-4
                        p Available Date : #{avaDate}
               .row
                  hr.row-space-4
                  .col-sm-3
                     p.font-gray Around
                  .col-sm-9
                     .col-sm-4
                        p Bus : #{around.bus}
                     .col-sm-4
                        p Metor : #{around.metro}
                     .col-sm-4
                        p Restaurant : #{around.restaurant}
                     .col-sm-4
                        p Bank : #{around.bank}
                     .col-sm-9
                        p Entertainment : #{around.entertainment}
               .row
                  hr
                  .col-sm-3
                     p.font-gray Amenities
                  .col-sm-9

               .row
                  hr.row-space-4
                  .col-sm-3
                     p.font-gray Description
                  .col-sm-9
                     p #{description}
               .row
                  hr.row-space-4
                  .col-sm-3
                     p.font-gray Furniture description
                  .col-sm-9
                     p #{furniture}
               .row
                  hr.row-space-4
                  .col-sm-3
                     p.font-gray Requirments
                  .col-sm-9
                     p No pats, No smoke
               .row.row-space-4
            .col-mylg-3.hidden-sm.hidden-xs
               section#side-bar.regular-position
                  .sidebar-header
                     ul.list-inline.list-unstyled
                        li.btn.btn-defualt
                              span.h6 I want it for
                              p.text-center.h4 8 months
                        li.btn.btn-defualt.active
                           span I want it for
                           p.text-center.h4 12 months
                  .sidebar-body
                     .row.row-space-4
                        .col-xs-12.text-center
                           label.radio-inline.inline-space-3
                              input(type='radio', name='optradio', checked='true')
                              | Furniture
                           label.radio-inline.inline-space-3
                              input(type='radio', name='optradio')
                              | No Furniture
                     .row
                        .col-xs-12.text-center
                           span.h4.price-span-top $
                           span.h1 #{price.twelve}
                           span.h4.price-span-top CAD
                           p.h6 per month
                     .row.row-space-4
                        .col-xs-12.text-center
                           btn.btn.btn-danger.btn-lg Request to Book
                     .row.row-space-4
                        .col-xs-12.text-center
                           p.h2 Viewers: #{viewer}
                     .row.row-space-4
                        .col-xs-12.text-center
                           btn.btn.btn-success.btn-lg Save to Wish List
block extraScript
   script( src='/javascripts/karapax.js' )